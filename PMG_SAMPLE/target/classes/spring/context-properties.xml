<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
                
    <!-- loading Resource properties -->
	<bean name="propertiesService" class="kr.co.pmgk.core.common.service.serviceImpl.PropertiesServiceImpl" destroy-method="destroy">
		<property name="extFileName">
			<set>
		        <map>
                    <entry key="encoding" value="UTF-8"/>
                    <entry key="filename" value="classpath*:*properties/core_*.properties"/>
                </map>
		        <map>
                    <entry key="encoding" value="UTF-8"/>
                    <entry key="filename" value="classpath*:*properties/*.properties"/>
                </map>
        	</set>
		</property>
		<property name="properties">
	        <map>
	        	<entry key="pageUnit" value="10"/>
	        	<entry key="pageSize" value="10"/>
	        </map>
		</property>
	</bean>
	      
</beans>