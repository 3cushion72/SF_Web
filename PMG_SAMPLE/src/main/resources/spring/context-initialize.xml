<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	<!-- 
		* Context Initial Tasking Service 서버 초기 실행 모듈 목록을 저장하기 위한 Record class
		* TInitServiceImpe을 상속을 받고 service를 구현해야 한다. 
	-->
    <bean id="contextInitTaskList" class="kr.co.pmgk.core.factory.DefaultContextInitTask">
        <property name="initTaskList">
        	<list>
        		<ref bean="initGeneralResourceManager"/>
        		<ref bean="initCodeManager"/>
        	</list>
        </property>
    </bean>
    
	<bean id="initGeneralResourceManager" class="kr.co.pmgk.core.common.manager.GeneralResourceManager"/>
	<bean id="initCodeManager" class="kr.co.pmgk.sample.common.manager.CodeManager"/>
    
    
</beans>
